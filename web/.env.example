# Database (Neon PostgreSQL)
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"

# Neon Auth
# Get these from your Neon project dashboard after enabling Neon Auth
NEON_AUTH_BASE_URL="https://auth.neon.tech/your-project-id"
NEON_AUTH_COOKIE_SECRET=""  # Generate with: openssl rand -base64 32

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Web Push (VAPID)
# Generate keys locally (keep private key secret):
#   npx web-push generate-vapid-keys
NEXT_PUBLIC_WEB_PUSH_VAPID_PUBLIC_KEY=""
WEB_PUSH_VAPID_PRIVATE_KEY=""
WEB_PUSH_VAPID_SUBJECT="mailto:you@example.com"

# Cron
# Used for manual/local triggering; Vercel Cron calls include x-vercel-cron: 1.
CRON_SECRET=""

# Rate limiting (Upstash Redis)
# Optional: if not set, auth rate limiting is disabled.
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# OAuth Providers (configured in Neon Auth dashboard)
# No client IDs/secrets needed here - managed by Neon Auth
